@startuml
'https://plantuml.com/class-diagram

abstract class Person

'Inheritance
Person <|-- Admin
Admin <|-- SuperAdmin

'Aggregation
Category o-- Product
Center *-- Admin

Category "0..1" - "0..*" Promotion
Product "0..1" - "0..*" Promotion

'This needs to be changed to many-to-many relationship
'in case a product can belong to more than one category
Product "0..1" - "0..*" exemptedFromPromotion

class Person {
    Integer id
    String fullname
    String email
    String passw
    login()
}

class Admin {
    managePromotions()
}

class SuperAdmin {
    manageAccounts()
}

class Category {
    Integer id
    String name
    Getters()
    Setters()
}
class Product {
    Integer id
    String name
    Getters()
    Setters()
}

class Center {
    Integer id
    String city
}

class Promotion {
    Integer id
    String applyOn
    Timestamp validUntil
    Getters()
    Setters()
}

class exemptedFromPromotion {
    Integer id
}



@enduml